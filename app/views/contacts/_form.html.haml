= simple_form_for [@client, @contact] do |f|
  = f.input :name, label: 'Contact Name'
  = f.input :job_title
  = f.input :email
  = f.input :phone
  = f.input :account_manager

  %button.btn.btn-success{ type: 'submit' }
    %span.glyphicon.glyphicon-floppy-disk
    Save

  = link_to 'Cancel', client_path(@client), class: 'btn btn-default'
